<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.element34.e34clock"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ClockSettingsActivity"
            android:label="E34ClockSettings">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver
            android:name=".ClockWidget"
            android:label="@string/widget_label">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="de.element34.e34clock.action.ACTION_CLOCK_CHANGED" />
                <action android:name="de.element34.e34clock.action.ACTION_SERVICE_RESTART"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/e34clock_widgetprovider" />
        </receiver>

        <receiver
            android:name="de.element34.e34clock.SoloClockWidget"
            android:label="@string/widget_clock_label">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/e34clock_solo_provider"/>
        </receiver>

        <receiver
            android:name="de.element34.e34clock.SoloDateWidget"
            android:label="@string/widget_date_label">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
                <action android:name="de.element34.e34clock.action.ACTION_CLOCK_CHANGED"/>
                <action android:name="de.element34.e34clock.action.ACTION_SERVICE_RESTART"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/e34date_solo_provider"/>
        </receiver>

        <service android:name=".ClockService" />


    </application>

</manifest>
